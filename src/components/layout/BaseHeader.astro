---
import HeaderMenu from "./headerMenu/HeaderMenu.astro";
import FloatingMenu from "./floatingMenu/FloatingMenu";
---

<header>
  <div class="headerBar">
    <HeaderMenu />
  </div>
  <div class="headerBar second">
    <FloatingMenu client:visible />
  </div>
</header>

<style>
  .headerBar {
    position: fixed;
    width: 100%;
    height: var(--ContContainUpperMargin);
    z-index: 4;
    pointer-events: none;
    display: flex;
    flex-direction: column;
  }

  .second {
    margin-top: var(--ContContainUpperMargin);
  }

  .headerBar > * {
    pointer-events: auto;
  }

  .menu {
    margin: auto;
    display: flex;
    gap: calc(var(--MenuHeight) / 4);
  }
</style>
